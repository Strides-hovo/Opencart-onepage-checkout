<div class="checkout-content checkout-cart">
    <h2 class="secondary-title"><i class="fa fa-shopping-cart"></i>{{ text_shopping_cart }} </h2>
    <div>
        <div class="table-responsive checkout-product">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="text-left name" colspan="2">{{ column_name }}</th>
                        <th class="text-center quantity">{{ column_quantity }}</th>
                        <th class="text-center price">{{ column_price }}</th>
                        <th class="text-right total">{{ column_total }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td class="text-left name" colspan="2">
                            {% if product.thumb %}
                                <a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-thumbnail" /></a>
                            {% endif %}
                            <a href="{{ product.href }}" class="product-name">{{ product.name }}</a>
                            {% for option in product.option %}
                                <br/>
                                &nbsp;
                                <small> - {{ option.name }}: {{ option.value }}</small>
                            {% endfor %}
                            {% if product.recurring %}
                                <br/>
                                <span class="label label-info">{{ text_recurring_item }}</span>
                                <small>{{ product.recurring }}</small>
                            {% endif %}
                        </td>
                        <td class="text-left quantity">
                            <div class="input-group d-flex">
                                <input type="number" name="quantity[{{ product.cart_id }}]" value="{{ product.quantity }}" size="1" class="form-control" min="1" />
                                <span class="input-group-btn">
                                    {% if product_remove %}
                                        <button type="button" data-toggle="tooltip" title="{{ button_remove }}" data-cart_id="{{ product.cart_id }}" class="btn-delete btn str-button"><i class="fa fa-trash-o"></i></button>
                                    {% endif %}
                                    {% if product_qnty_update %}
                                        <button type="button" data-toggle="tooltip" title="{{ button_update }}" data-cart_id="{{ product.cart_id }}" class="btn-update btn str-button"><i class="fa fa-refresh"></i></button>
                                    {% endif %}
                                </span>
                            </div>
                        </td>
                        <td class="text-right price">{{ product.price }}</td>
                        <td class="text-right total">{{ product.total }}</td>
                    </tr>
                {% endfor %}
                {% for voucher in vouchers %}
                    <tr>
                        <td class="text-left">{{ voucher.description }}</td>
                        <td class="text-left"></td>
                        <td class="text-right">1</td>
                        <td class="text-right">{{ voucher.amount }}</td>
                        <td class="text-right">{{ voucher.amount }}</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                {% for total in totals %}
                    <tr>
                        <td colspan="4" class="text-left">{{ total.title }}:</td>
                        <td class="text-right">{{ total.text }}</td>
                    </tr>
                {% endfor %}
                </tfoot>
            </table>
        </div>
    </div>
</div>

