<div class="checkout-content checkout-register">
    <fieldset id="account">
        <h2 class="secondary-title"><i class="fa fa-user-plus"></i>{{ text_your_details }}</h2>
        <div class="payment-new box-inner">
            <div class="form-group input-firstname required" >
                <input type="text" name="firstname" value="{{ fields.firstname }}" placeholder="{{ entry_firstname }} *" id="input-payment-firstname" class="form-control">
            </div>
            <div class="form-group input-lastname required" >
                <input type="text" name="lastname" value="{{ fields.lastname }}" placeholder="{{ entry_lastname }} *" id="input-payment-lastname" class="form-control">
            </div>
            <div class="form-group required">
                <input type="text" name="email" value="{{ fields.email }}" placeholder="{{ entry_email }} *" id="input-payment-email" class="form-control">
            </div>
            <div class="form-group required">
                <input type="text" name="telephone" value="{{ fields.telephone }}" placeholder="{{ entry_telephone }} *" id="input-payment-telephone" class="form-control">
            </div>
            <div class="form-group fax-input">
                <input type="text" name="fax" placeholder="{{ entry_fax }}" id="input-payment-fax" class="form-control">
            </div>
        </div>
    </fieldset>
    <fieldset id="password" style="display: none">
         <h2 class="secondary-title"><i class="fa fa-lock"></i>{{ text_your_password }}</h2>
         <div class="box-inner">
            <div class="form-group required">
                <input type="password" name="password" placeholder="{{ entry_password }} *" id="input-payment-password" class="form-control">
            </div>
            <div class="form-group required">
                <input type="password" name="confirm" placeholder="{{ entry_confirm }}*" id="input-payment-confirm" class="form-control">
            </div>
        </div>
    </fieldset>
    <fieldset id="customer" style="display: none">
        <h2 class="secondary-title"><i class="fa fa-unlock"></i>{{ text_returning_customer }}</h2>
        <div class="box-inner">
            <div class="form-group">
                <input type="text" name="login_email" placeholder="{{ entry_email }}" id="input-login_email" class="form-control">
            </div>
            <div class="form-group">
                <input type="password" name="login_password" placeholder="{{ entry_password }}" id="input-login_password" class="form-control">
            </div>
            <div class="form-group box-inner">
                <a href="{{ forgotten }}" class="link">{{ text_forgotten }}</a>
                <input type="button" value="{{ button_login }}" id="button-login" data-loading-text="{{ text_loading }}" class="btn button" />
            </div>
        </div>
    </fieldset>
</div>